{
  "name": "jmac-visualizer",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "author": "Avdesh Jadon",
  "description": "A beautiful animated disk space visualizer for macOS.",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^25.1.8",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.avdeshjadon.jmacvisualizer",
    "productName": "JmacVisualizer",
    "mac": {
      "target": [
        "dmg",
        "zip",
        "dir"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "extraResources": [
      {
        "from": "../backend/dist/app",
        "to": "backend"
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
